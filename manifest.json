{
    "manifest_version": 2,
    "name": "Gold Prices in India",
    "version": "1.4.0",
    "description": "See live gold price in India, gold sell price, gold buy price",
    "permissions": [
        "https://paytm.com/",
        "https://mywealth.adityabirlacapital.com/",
        "storage",
        "notifications"
    ],
    "browser_action" : {
        "default_icon" : "images/gold_32.png",
        "default_popup": "index.html"
    },
    "background" : {
        "scripts" : ["js/background.js"],
        "persistent": true
    },    
    "icons": {
        "16": "images/gold_16.png",
        "32": "images/gold_32.png",
        "128": "images/gold_128.png",
        "256": "images/gold_256.png"
    }
}